<%= form_for [@campaign, @donation] do |f| %>
    <%= f.hidden_field :campaign_id %>
    <%= f.hidden_field :user_id %>
    <div class="form-group">
        <%= f.label :amount, class: "form-control" %>
        <%= f.text_area :amount, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.submit "Confirm Donatiton", class: 'btn btn-success' %>
    </div>
<% end %>