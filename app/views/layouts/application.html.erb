<!DOCTYPE html>
<html>
  <head>
    <title>LaunchPad</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <nav class="navbar navbar-expand-md navbar-light border-bottom border-dark">
    <%= link_to image_tag("launchpad.png"), root_path, class: "navbar-brand" %>
    
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="<%= root_path %>" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Current Campaigns
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="/campaigns/newest">Newest</a>
            <a class="dropdown-item" href="/campaigns/most_raised">Most Raised</a>
            <a class="dropdown-item" href="/campaigns/funded">Funded</a>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to 'Launch a Campaign', new_campaign_path, class: "nav-link" %>
        </li>
      </ul>
      
      <div class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <%= link_to 'Profile', user_path(current_user), class: "nav-item nav-link small" %>  <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "nav-item nav-link small") %>
        <% else %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "nav-item nav-link small" %>  <%= link_to('Log In', new_user_session_path, class: "nav-item nav-link small") %>
        <% end %>  
      </div>
    </div>
</nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </div>
  </body>
</html>
