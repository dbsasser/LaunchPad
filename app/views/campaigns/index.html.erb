<div class="card-deck">
    <% @campaigns.each do |campaign|%>
        <div class="card mb-3" style="min-width: 33%; max-width: 448px">
            <img class="card-img-top" src="..." alt="Card image cap">
            
            <div class="card-body">
                <h5 class="card-title"><%= link_to campaign.title, campaign_path(campaign), class: 'text-dark' %></h5>
                
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="<%= campaign.percent_raised %>" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= campaign.percent_raised %>%">
                        <%= campaign.percent_raised %>%
                    </div>
                </div>
                
                <p class="card-text"><span class="text-success h4">$<%= campaign.donations.sum(:amount) %></span> raised of
                <span class="text-success h4">$<%= campaign.goal %></span> Goal </p>
                
                <div class="row justify-content-center">
                    <%= link_to 'View Campaign', campaign_path(campaign), class: "btn btn-outline-success" %>
                </div>
            </div>
        </div>
    <% end %>
</div>