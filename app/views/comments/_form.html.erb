<%= form_for @comment do |f| %>
    <%= f.hidden_field :campaign_id %>
    <%= f.hidden_field :user_id %>
    <div class="form-group">
        <%= f.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.submit "Add Comment", class: 'btn btn-success' %>
    </div>
<% end %>